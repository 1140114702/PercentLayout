<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zwonb.percentlayout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:title="@string/app_name" />

            <TextView
                android:id="@+id/top_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="aspectRatio=300%"
                app:layout_aspectRatio="300%"
                app:layout_widthPercent="100%" />

            <TextView
                android:gravity="center"
                android:text="heightPercent=10%,widthPercent=70%"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:background="@color/colorAccent"
                app:layout_heightPercent="10%"
                app:layout_widthPercent="70%" />

            <com.zwonb.percentlayout.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:background="@color/colorPrimary"
                app:layout_aspectRatio="363.64%"
                app:layout_widthPercent="100%">

                <TextView
                    android:id="@+id/left"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:text="aspectRatio=100%"
                    android:textSize="16sp"
                    app:layout_aspectRatio="200%"
                    app:layout_marginBottomPercent="7.27%"
                    app:layout_marginLeftPercent="2%"
                    app:layout_marginRightPercent="1%"
                    app:layout_marginTopPercent="7.27%"
                    app:layout_widthPercent="47%" />

                <TextView
                    android:id="@+id/right"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:text="aspectRatio=100%"
                    android:textSize="16sp"
                    app:layout_aspectRatio="200%"
                    app:layout_marginBottomPercent="7.27%"
                    app:layout_marginLeftPercent="1%"
                    app:layout_marginRightPercent="2%"
                    app:layout_marginTopPercent="7.27%"
                    app:layout_widthPercent="47%" />
            </com.zwonb.percentlayout.PercentLinearLayout>

            <com.zwonb.percentlayout.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:background="@color/colorPrimary"
                app:layout_aspectRatio="204.08%"
                app:layout_widthPercent="100%">

                <TextView
                    android:id="@+id/left_view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:text="aspectRatio=100%"
                    app:layout_aspectRatio="100%"
                    app:layout_marginLeftPercent="2%"
                    app:layout_marginRightPercent="1%"
                    app:layout_marginTopPercent="4.08%"
                    app:layout_widthPercent="47%" />

                <TextView
                    android:id="@+id/right_view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:text="aspectRatio=100%"
                    app:layout_aspectRatio="100%"
                    app:layout_marginLeftPercent="1%"
                    app:layout_marginRightPercent="2%"
                    app:layout_marginTopPercent="4.08%"
                    app:layout_widthPercent="47%" />
            </com.zwonb.percentlayout.PercentLinearLayout>

        </com.zwonb.percentlayout.PercentLinearLayout>


        <!--<View-->
            <!--android:layout_width="0.4dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:background="#000" />-->

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.4dp"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:background="#000" />-->


    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentFrameLayout>
