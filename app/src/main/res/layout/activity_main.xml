<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zwonb.percentlayout.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@string/app_name" />

        <TextView
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="aspectRatio=300%"
            app:layout_aspectRatio="300%"
            app:layout_widthPercent="100%" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="heightPercent=10%,widthPercent=70%"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="70%" />

        <LinearLayout
            android:layout_marginTop="16dp"
            android:id="@+id/add_view_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.zwonb.percentlayout.Test
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <com.zwonb.percentlayout.PercentLinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            app:layout_aspectRatio="196.08%"
            app:layout_widthPercent="100%">

            <TextView
                android:id="@+id/left"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="aspectRatio=100%"
                android:textSize="16sp"
                app:layout_aspectRatio="100%"
                app:layout_marginBottomPercent="3.92%"
                app:layout_marginLeftPercent="2%"
                app:layout_marginRightPercent="1%"
                app:layout_marginTopPercent="3.92%"
                app:layout_widthPercent="47%" />

            <TextView
                android:id="@+id/right"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="aspectRatio=100%"
                android:textSize="16sp"
                app:layout_aspectRatio="100%"
                app:layout_marginBottomPercent="3.92%"
                app:layout_marginLeftPercent="1%"
                app:layout_marginRightPercent="2%"
                app:layout_marginTopPercent="3.92%"
                app:layout_widthPercent="47%" />
        </com.zwonb.percentlayout.PercentLinearLayout>












        <com.zwonb.percentlayout.PercentLinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            app:layout_aspectRatio="204.08%"
            app:layout_widthPercent="100%">

            <TextView
                android:id="@+id/left_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="aspectRatio=100%"
                app:layout_aspectRatio="100%"
                app:layout_marginLeftPercent="2%"
                app:layout_marginRightPercent="1%"
                app:layout_marginTopPercent="4.08%"
                app:layout_widthPercent="47%" />

            <TextView
                android:id="@+id/right_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="aspectRatio=100%"
                app:layout_aspectRatio="100%"
                app:layout_marginLeftPercent="1%"
                app:layout_marginRightPercent="2%"
                app:layout_marginTopPercent="4.08%"
                app:layout_widthPercent="47%" />
        </com.zwonb.percentlayout.PercentLinearLayout>

    </com.zwonb.percentlayout.PercentLinearLayout>


